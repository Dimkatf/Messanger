<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- СИНИЙ БЛОК СПРАВА -->
    <LinearLayout
        android:id="@+id/bubbleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/message_bubble_modern"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginEnd="16dp"
        android:elevation="2dp"
        android:orientation="vertical"
        android:minWidth="110dp"> <!-- Минимальная ширина для "Изменено" + время -->

        <!-- Текст -->
        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст сообщения"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:maxWidth="280dp"
            android:gravity="center_vertical|start" />

        <!-- Контейнер для "Изменено" и времени -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!-- "Изменено" слева -->
            <TextView
                android:id="@+id/editedText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Изменено"
                android:textSize="10sp"
                android:textColor="#CCCCCC"
                android:maxLines="1"
                android:visibility="gone" />

            <!-- Пустое пространство -->
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Время ВСЕГДА справа -->
            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:30"
                android:textSize="10sp"
                android:textColor="#CCCCCC"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>